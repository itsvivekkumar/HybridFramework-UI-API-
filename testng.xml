<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="FrameworkDemo" verbose="1">

    <listeners>
        <listener class-name="utils.ExtentTestNGListener"/>
    </listeners>
<!--     API Tests First -->
    <test name="API Tests">
        <classes>
            <class name="api.store.Store"/>
            <class name="api.user.User"/>
        </classes>
    </test>
    <test name="UI Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.LoginTest"/>
            <class name="tests.Phone"/>
<!--            <class name="tests"/>-->
        </classes>
    </test>

</suite>
